{
  "name": "aps-admin-electron",
  "version": "1.2.11",
  "description": "APS Admin Desktop Application",
  "main": "electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "electron": "electron .",
    "electron:prod": "cross-env NODE_ENV=production electron .",
    "electron:dev": "concurrently --kill-others --raw \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "release": "npm run electron:build && gh release create v%npm_package_version% dist/APS-Admin-Setup-%npm_package_version%.exe dist/latest.yml --title \"v%npm_package_version%\" && git push --follow-tags"
  },
  "keywords": [
    "aps",
    "admin",
    "electron",
    "desktop"
  ],
  "author": "APS Consulting",
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-devtools": "^5.91.1",
    "dompurify": "^3.3.1",
    "electron-updater": "^6.7.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.10.1",
    "socket.io-client": "^4.8.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^8.2.2",
    "cross-env": "^10.1.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "vite": "^6.0.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "kr.apsconsulting.admin",
    "productName": "APS Admin",
    "publish": {
      "provider": "github",
      "owner": "S-Choi-1997",
      "repo": "APS_electron_BE"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "directories": {
      "buildResources": "electron"
    },
    "win": {
      "target": "nsis",
      "icon": "electron/icon.png",
      "artifactName": "APS-Admin-Setup-${version}.${ext}"
    }
  }
}
